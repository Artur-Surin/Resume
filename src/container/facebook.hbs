{{!-- Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <main>
        <h1>{{name}}</h1>
        {{#each users}}
        <div>
            <h2>{{name}} ({{gender}}, {{age}})</h2>
            <h3>Friends:</h3>
            <ul>
                {{#each friends}}
                <li>{{name}} ({{gender}}, {{age}})</li>
                {{#if mutual_friends}}
                <ul>
                    {{#each mutual_friends}}
                    <li>{{name}} ({{gender}}, {{age}})</li>
                    {{#if mutual_friends}}
                    <ul>
                        {{#each mutual_friends}}
                        <li>{{name}} ({{gender}}, {{age}})</li>
                        {{/each}}
                    </ul>
                    {{/if}}
                    {{/each}}
                </ul>
                {{/if}}
                {{/each}}
            </ul>
            <h3>Groups:</h3>
            {{#each groups}}
            <li>{{name}} - {{description}}</li>
            <ul>
                {{#each members}}
                <li>{{name}} ({{gender}}, {{age}})</li>
                {{/each}}
            </ul>
            {{/each}}
        </div>
        {{/each}}
    </main>
</div>

