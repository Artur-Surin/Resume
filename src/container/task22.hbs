<div>
    <header class="text-center">
        <h1>{{page_header.title}}</h1>
        <p>{{page_header.description}}</p>
    </header>

    <section class="card w-70 m-3">
        <div class="display-1 text-end">{{ section.about_us.title_list.main }}</div>
        <h2 class="text-end">{{ section.about_us.title_list.sub }}</h2>
        <div>
            <button type="button" class="btn btn-outline-info">{{ section.about_us.button.text }}</button>
        </div>
    </section>

    <section class="card w-70 m-3">
        <div class="display-5">{{ section.advantage.title }}</div>
        <div class="card w-70 p-3">
            <div class="display-4">{{ section.advantage.efficiency.title }}</div>
            <h6>{{ section.advantage.efficiency.sub_title }}</h6>
            <p>{{ section.advantage.efficiency.description }}</p>
            <div>
                <button type="button" class="btn btn-outline-warning">{{ section.advantage.efficiency.button
                    }}</button>
            </div>
        </div>

        <div class="card w-70 p-3 mt-3 mb-3">
            <div class="text-center display-4">{{ section.advantage.innovation.title }}</div>
            <h6 class="text-center">{{ section.advantage.innovation.sub_title }}</h6>
            <p class="text-center">{{ section.advantage.innovation.description }}</p>
            <div>
                <button type="button" class="btn btn-outline-warning">{{ section.advantage.innovation.button }}</button>
            </div>
        </div>

        <div class="card w-70 p-3">
            <div class="text-end display-4">{{ section.advantage.collaboration.title }}</div>
            <h6 class="text-end">{{ section.advantage.collaboration.sub_title }}</h6>
            <p class="text-end">{{ section.advantage.collaboration.description }}</p>
            <div>
                <button type="button" class="btn btn-outline-warning">{{ section.advantage.collaboration.button
                    }}</button>
            </div>
        </div>
    </section>

    <section class="card w-70 m-3">
        <div class="display-5">{{ section.agreement.title }}</div>
        <div class="card w-70 p-3">
            <h5>{{ section.agreement.info.sub_title }}</h5>
            <div class="card w-70 p-3">
                <p>{{ section.agreement.info.detail.text }}</p>
                <div>
                    <button type="button" class="btn btn-success">{{ section.agreement.info.detail.button }}</button>
                </div>
            </div>
        </div>
    </section>

</div>