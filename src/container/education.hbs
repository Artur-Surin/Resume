{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="container">
    <div class="row">
        {{#with main}}
        <div class="col-md-4">
            <section>
                {{> title big=true data='My education'}}
                <ul class="list-group">
                    {{#each education}}
                    <li class="list-group-item">
                        {{name}}
                        {{#unless isEnd includeZero=true}} (Ще в процесі) {{/unless}}
                    </li>
                    {{/each}}
                </ul>
            </section>
        </div>
        <div class="col-md-4">
            <section>
                {{> title data='My certificates'}}
                <ul class="list-group">
                    {{#each certificates}}
                    <li class="list-group-item">{{name}} ({{id}})</li>
                    {{/each}}
                </ul>
            </section>
        </div>
        {{/with}}
    </div>
</div>



