{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="container">
    <div class="row">
        {{#with main}}
        <div class="col-md-4">
            <h2>Skills</h2>
            <ul class="list-group">
                {{#each skills}}
                <li class="list-group-item{{#if isTop}} active{{/if}}">
                    {{name}}
                    <span class="badge bg-primary rounded-pill">{{point}}</span>
                </li>
                {{/each}}
            </ul>
        </div>

        <div class="col-md-4">
            <h2>Hobbies</h2>
            <ul class="list-group">
                {{#each hobbies}}
                <li class="list-group-item{{#if isMain}} active{{/if}}">{{name}}</li>
                {{/each}}
            </ul>
        </div>
        {{/with}}
    </div>
</div>

