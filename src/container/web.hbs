{{!-- Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="container">
    <div class="row">
        {{#each web.languages}}
        <div class="col-md-6  g-5">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{this.version}}</h6>
                    <p class="card-text">{{this.description}}</p>
                    {{#if this.elements}}
                    <h6 class="card-subtitle mb-2 text-muted">Elements:</h6>
                    <ul>
                        {{#each this.elements}}
                        <li>{{this.name}} - {{this.description}}</li>
                        {{/each}}
                    </ul>
                    {{/if}}
                    {{#if this.properties}}
                    <h6 class="card-subtitle mb-2 text-muted">Properties:</h6>
                    <ul>
                        {{#each this.properties}}
                        <li>{{this.name}} - {{this.description}}</li>
                        {{/each}}
                    </ul>
                    {{/if}}
                    {{#if this.functions}}
                    <h6 class="card-subtitle mb-2 text-muted">Functions:</h6>
                    <ul>
                        {{#each this.functions}}
                        <li>{{this.name}} - {{this.description}}</li>
                        {{/each}}
                    </ul>
                    {{/if}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>



