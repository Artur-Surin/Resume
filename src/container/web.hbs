{{!-- Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>

    <h1>Programming Languages</h1>

    <table>
        {{#each web.languages}}
        <tr>
            <td>Name:</td>
            <td>{{this.name}}</td>
        </tr>
        <tr>
            <td>Version:</td>
            <td>{{this.version}}</td>
        </tr>
        <tr>
            <td>Description:</td>
            <td>{{this.description}}</td>
        </tr>
        {{#if this.elements}}
        <tr>
            <td>Elements:</td>
            <td>
                <ul>
                    {{#each this.elements}}
                    <li>{{this.name}} - {{this.description}}</li>
                    {{/each}}
                </ul>
            </td>
        </tr>
        {{/if}}
        {{#if this.properties}}
        <tr>
            <td>Properties:</td>
            <td>
                <ul>
                    {{#each this.properties}}
                    <li>{{this.name}} - {{this.description}}</li>
                    {{/each}}
                </ul>
            </td>
        </tr>
        {{/if}}
        {{#if this.functions}}
        <tr>
            <td>Functions:</td>
            <td>
                <ul>
                    {{#each this.functions}}
                    <li>{{this.name}} - {{this.description}}</li>
                    {{/each}}
                </ul>
            </td>
        </tr>
        {{/if}}
        {{/each}}
    </table>

</div>

