{{!-- Це код container файлу для summary сторінки,в якому міститься код,
котрий буде віддаватися по шляху(PATH) - "/summary"--}}

<div class="container">
    <h2 class="fw-bold mb-4">Work history</h2>
    {{#each main.works}}
    <div class="card mb-4">
        <div class="card-body">
            <h3>{{position}}</h3>
            <div class="mb-3">{{duration.from}} - {{#if duration.to}}{{duration.to}}{{else}}Present{{/if}}</div>
            <div class="mb-3">{{#if company.url}}<a href="{{company.url}}"
                    target="_blank">{{company.name}}</a>{{else}}{{company.name}}{{/if}}</div>
            <h4 class="mb-3">Projects ({{projectAmount}})</h4>
            <ul class="list-group mb-3">
                {{#each projects}}
                <li class="list-group-item">
                    <div class="mb-3"><a href="{{url}}" target="_blank">{{name}}</a></div>
                    <div class="mb-3">{{about}}</div>
                    <div class="mb-3"><em>Project stacks ({{stackAmoGnt}})</em></div>
                    <ul class="list-group mb-3">
                        {{#each stacks}}
                        <li class="list-group-item">{{name}}</li>
                        {{/each}}
                    </ul>
                    <div class="mb-3"><em>Project awards ({{awardAmoGnt}})</em></div>
                    <ul class="list-group">
                        {{#each awards}}
                        <li class="list-group-item">{{name}}</li>
                        {{/each}}
                    </ul>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
    {{/each}}
</div>

