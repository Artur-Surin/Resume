{{!-- Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<main>
    <div class="jumbotron">
        <h1 class="display-4">{{> title big=true data=name}}</h1>
        <p class="lead">{{description}}</p>
        <p>Year: {{history.year}}</p>
        <p>Founder: <b>{{history.founder}}</b></p>
        <hr class="my-4">
    </div>

    <div>

        {{> title data="Types"}}
        <ul class="list-group">
            {{#each types}}
            <li class="list-group-item list-group-item-primary">{{this}}</li>
            {{/each}}
        </ul>
    </div>

    <section>
        {{#with syntax}}
        <div class="list-group">
            <a href="#" class="list-group-item list-group-item-action flex-column align-items-start active">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">{{> title data="Syntax"}}</h5>
                </div>
                <p class="mb-1">
                    <p>Variables: {{variables}}</p>
                    <p>Functions: {{functions}}</p>
                    <p>Conditionals: {{conditionals}}</p>
                    <p>Loops: {{loops}}</p>
                    <p>Classes: {{classes}}</p>
                </p>
            </a>
        </div>
        {{/with}}
    </section>

    <div>
        {{> title data="Features"}}
        {{#each features}}
        <ul class="list-group">
            <li class="list-group-item list-group-item-primary">{{this}}</li>
        </ul>
        {{/each}}
    </div>

    <section>
        {{> title data="Libraries"}}
        {{#each libraries}}
        <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
            <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab"
                aria-controls="v-pills-home" aria-selected="true">{{this}}</a>
            <br>
        </div>
        {{/each}}
    </section>

    <section>
        {{> title data="Tools"}}
        {{#each tools}}
        <ul>
            <li>{{this}}</li>
        </ul>
        {{/each}}
    </section>

    <section>
        {{> title data="Community"}}
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Type</th>
                </tr>
            </thead>
            <tbody>
                {{#each community}}
                <tr>
                    <th scope="row">{{number}}</th>
                    <td>{{name}}</td>
                    <td>{{type}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </section>

</main>

