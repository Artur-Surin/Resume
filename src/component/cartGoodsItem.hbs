{{#each goodsBlock}}
<div class="card mb-3" style="">
    <div class="row g-0 p-2 align-items-center">
        <div class="col-md-2">
            <img src="{{image}}" class="img-fluid rounded-start" alt="{{name}}">
        </div>
        <div class="col-md-5">
            <div class="card-body">
                <h5 class="card-title">{{name}}</h5>
                <p class="card-text"><small class="text-body-secondary">{{description}}</small></p>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card-body">
                <p class="card-text"><small class="text-body-secondary">{{price.title}}: <br>
                    </small><b>{{price.value}}</b></p>
            </div>
        </div>
        <div class="col-md-1">
            <div class="card-body">
                <p class="card-text"><small class="text-body-secondary">{{amount}}</small></p>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card-body">
                <button type="button" class="btn btn-primary m-1">{{buttons.[0].text}}</button>
                <button type="button" class="btn btn-outline-danger m-1">{{buttons.[1].text}}</button>
            </div>
        </div>
    </div>
</div>
{{/each}}