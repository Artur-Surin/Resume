<div class="container">
  <div class="my-5">
    <hr>
    <div>
      {{#with ./footer.social}}
      {{> link text=email.text href=email.href blank=true }}
      {{> link text=phone.text href=phone.href blank=true }}
      {{> link text=linkedin.text href=linkedin.href blank=true noLine=true }}
      {{/with}}
    </div>
    <div class="my-3">
      <em>Copyright by
        <strong>{{./header.name.firstname}} {{./header.name.lastname}}</strong>
      </em>
    </div>
    <div>
      <address>{{./header.address}}</address>
    </div>
  </div>
</div>